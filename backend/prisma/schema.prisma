enum savedThemes {
  RED
  GREEN
  BLUE
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  emailVerified   Boolean
  Name       String
  diaries    Diary[]  // Relation field
}

model Diary {
  id         Int     @id @default(autoincrement())
  title      String
  content    String
  done       Boolean @default(false)
  theme      savedThemes
  userId     Int
  user       User    @relation(fields: [userId], references: [id]) // Foreign key relationship
}
